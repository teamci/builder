#!/usr/bin/env bash

set -euo pipefail

metadata_command() {
	case "${1:-}" in
		set)
			local key="${2}" value="${3}"
			echo "${value}" > "${BUILDKITE_AGENT_METADIR}/${key}"
			;;
		get)
			local key="${2}"

			if [ -f "${BUILDKITE_AGENT_METADIR}/${key}" ]; then
				cat "${BUILDKITE_AGENT_METADIR}/${key}"
			else
				echo "${key} not set" 1>&2
				return 1
			fi
			;;
		*)
			echo "Cannot handle $*" 1>&2
			return 1
	esac
}

pipeline_command() {
	case "${1:-}" in
		upload)
			metadata_command set pipeline "$(cat)"
			;;
		*)
			echo "Cannot handle $*" 1>&2
			return 1
	esac
}

main() {
	case "${1:-}" in
		meta-data)
			shift
			metadata_command "$@"
			;;
		reset)
			rm -f "${BUILDKITE_AGENT_METADIR}/"*
			;;
		pipeline)
			shift
			pipeline_command "$@"
			;;
		*)
			echo "Cannot handle $*" 1>&2
			return 1
	esac
}

main "$@"
