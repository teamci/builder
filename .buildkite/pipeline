#!/usr/bin/env bash

set -euo pipefail

generate_pipeline() {
	echo 'env:'
	echo '  BUILDKITE_TIMEOUT: 15'
	echo 'steps:'
	for check in "$@"; do
		echo "  - label: ${check}"
		echo "    command: script/${check}"
	done
}

main() {
	ruby -v

	buildkite-agent pipeline upload .buildkite/stub-pipeline.yml
}

main "$@"
